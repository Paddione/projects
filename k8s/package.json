{
  "name": "k8s-e2e-tests",
  "version": "1.0.0",
  "private": true,
  "description": "K3d cluster health and connectivity E2E tests",
  "scripts": {
    "test:e2e": "playwright test --config=tests/e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config=tests/e2e/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test --config=tests/e2e/playwright.config.ts --headed",
    "test:e2e:report": "playwright show-report test-results/playwright-report",
    "test:e2e:debug": "playwright test --config=tests/e2e/playwright.config.ts --debug",
    "postinstall": "playwright install chromium"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  }
}
