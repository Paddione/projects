{
  "name": "unified-auth-service",
  "version": "1.0.0",
  "description": "Centralized authentication service for l2p, VideoVault, and payment projects",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run build:frontend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx migrations/run-migrations.ts",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "dev": "tsx watch src/server.ts",
    "lint": "eslint src --ext .ts",
    "start": "node dist/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:cleanup": "tsx scripts/cleanup-test-data.ts",
    "test:cleanup:dry": "tsx scripts/cleanup-test-data.ts --dry-run --verbose",
    "typecheck": "tsc --noEmit",
    "check:deprecated": "node -e \"const fs=require('fs'); const path='package-lock.json'; if(!fs.existsSync(path)){console.log('No package-lock.json found.'); process.exit(0);} const lock=JSON.parse(fs.readFileSync(path,'utf8')); const deprecated=Object.entries(lock.packages||{}).filter(([,info])=>info.deprecated); if(!deprecated.length){console.log('No deprecated packages.'); process.exit(0);} deprecated.forEach(([name,info])=>{const pkg=name.replace(/^node_modules\\//,''); console.log(pkg + ': ' + info.deprecated);}); process.exit(1);\""
  },
  "keywords": [
    "authentication",
    "oauth",
    "jwt",
    "express",
    "drizzle"
  ],
  "author": "Patrick",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "connect-pg-simple": "^9.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.12",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "postgres": "^3.4.3",
    "validator": "^13.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^7.0.4",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/pg": "^8.10.9",
    "@types/validator": "^13.11.7",
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "drizzle-kit": "1.0.0-beta.9-e89174b",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.3.4",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
