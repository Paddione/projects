{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/routes/*": ["src/routes/*"],
      "@/services/*": ["src/services/*"],
      "@/models/*": ["src/models/*"],
      "@/middleware/*": ["src/middleware/*"],
      "@/utils/*": ["src/utils/*"],
      "@/types/*": ["src/types/*"],
      "@shared/*": ["../../shared-infrastructure/shared/l2p/*"],
      "@test-config/*": ["../../shared-infrastructure/shared/l2p/test-config/*"]
    },
    "types": ["jest", "node", "@types/supertest", "@playwright/test"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/__tests__/**/*.ts",
    "../../shared-infrastructure/shared/l2p/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.e2e.ts",
    "**/*.playwright.ts",
    "**/playwright.config.*",
    "src/cli/**/*"
  ]
}
