{
  "name": "learn2play-frontend-e2e",
  "version": "1.0.0",
  "description": "E2E tests for Learn2Play frontend",
  "scripts": {
    "install:browsers": "playwright install --with-deps",
    "test": "playwright test",
    "test:accessibility": "playwright test tests/accessibility",
    "test:debug": "playwright test --debug",
    "test:error-handling": "playwright test tests/error-handling",
    "test:headed": "playwright test --headed",
    "test:integration": "playwright test tests/integration",
    "test:performance": "playwright test tests/performance",
    "test:report": "playwright show-report",
    "test:smoke": "playwright test tests/smoke",
    "test:ui": "node ./scripts/run-playwright-ui.js",
    "test:ui:xvfb": "xvfb-run -a -s '-screen 0 1280x1024x24' playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0"
  }
}
