{
  "name": "learn2play-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:with-tsc-log": "vite build && node ./scripts/tsc-log.mjs",
    "check:test-env": "./scripts/check-test-env.sh",
    "dev": "NODE_OPTIONS=--max-old-space-size=4096 vite --force --config vite.config.ts",
    "preview": "vite preview",
    "start:docker-test": "docker compose -f ../docker-compose.test.yml up -d --build",
    "start:test-env": "NODE_ENV=test VITE_TEST_MODE=true VITE_API_URL=https://l2p.korczewski.de/api VITE_SOCKET_URL=https://l2p.korczewski.de vite --port 3000",
    "status:docker-test": "docker compose -f ../docker-compose.test.yml ps",
    "stop:docker-test": "docker compose -f ../docker-compose.test.yml down -v",
    "test": "NODE_ENV=test TEST_ENVIRONMENT=local TEST_TYPE=unit jest",
    "test:ci": "NODE_ENV=test TEST_ENVIRONMENT=ci TEST_TYPE=unit jest --ci --coverage --watchAll=false",
    "test:coverage": "NODE_ENV=test TEST_ENVIRONMENT=local TEST_TYPE=unit jest --config=jest.config.mjs --coverage",
    "test:e2e": "npm --prefix e2e run test",
    "test:e2e:accessibility": "npm --prefix e2e run test:accessibility",
    "test:e2e:docker": "TEST_ENVIRONMENT=docker BASE_URL=http://localhost:3007 API_URL=http://localhost:3006/api npm --prefix e2e run test",
    "test:e2e:docker:headed": "TEST_ENVIRONMENT=docker BASE_URL=http://localhost:3007 API_URL=http://localhost:3006/api npm --prefix e2e run test:headed",
    "test:e2e:docker:integration": "TEST_ENVIRONMENT=docker BASE_URL=http://localhost:3007 API_URL=http://localhost:3006/api npm --prefix e2e run test:integration",
    "test:e2e:docker:smoke": "TEST_ENVIRONMENT=docker BASE_URL=http://localhost:3007 API_URL=http://localhost:3006/api npm --prefix e2e run test:smoke",
    "test:e2e:docker:ui": "TEST_ENVIRONMENT=docker BASE_URL=http://localhost:3007 API_URL=http://localhost:3006/api npm --prefix e2e run test:ui",
    "test:e2e:error-handling": "npm --prefix e2e run test:error-handling",
    "test:e2e:headed": "npm --prefix e2e run test:headed",
    "test:e2e:integration": "npm --prefix e2e run test:integration",
    "test:e2e:performance": "npm --prefix e2e run test:performance",
    "test:e2e:smoke": "npm --prefix e2e run test:smoke",
    "test:e2e:ui": "npm --prefix e2e run test:ui",
    "test:integration": "NODE_ENV=test TEST_ENVIRONMENT=local TEST_TYPE=integration jest src/__tests__/integration --passWithNoTests",
    "test:integration:ci": "NODE_ENV=test TEST_ENVIRONMENT=ci TEST_TYPE=integration jest src/__tests__/integration --passWithNoTests",
    "test:integration:local": "NODE_ENV=test TEST_ENVIRONMENT=local TEST_TYPE=integration jest src/__tests__/integration --passWithNoTests",
    "test:unit": "NODE_ENV=test TEST_ENVIRONMENT=local TEST_TYPE=unit jest",
    "test:unit:ci": "NODE_ENV=test TEST_ENVIRONMENT=ci TEST_TYPE=unit jest",
    "test:unit:local": "NODE_ENV=test TEST_ENVIRONMENT=local TEST_TYPE=unit jest",
    "test:watch": "NODE_ENV=test TEST_ENVIRONMENT=local TEST_TYPE=unit jest --watch",
    "tsc:log": "node ./scripts/tsc-log.mjs",
    "typecheck": "tsc -p tsconfig.strict.json --noEmit",
    "typecheck:loose": "tsc -p tsconfig.json --noEmit",
    "typecheck:strict": "tsc -p tsconfig.strict.json --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-router-dom": "^6.8.1",
    "socket.io-client": "^4.6.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.19.9",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^4.0.0",
    "axe-core": "^4.10.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.40.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.2",
    "vite": "^4.3.2"
  }
}
