{
  "extends": "./tsconfig.json",
  "include": [
    "client/src/**/*",
    "client/**/*.test.ts",
    "client/**/*.test.tsx",
    "client/**/*.spec.ts",
    "client/**/*.spec.tsx",
    "shared-infrastructure/shared/videovault/**/*",
    "server/**/*",
    "scripts/**/*",
    "e2e/**/*.ts",
    "e2e/**/*.tsx",
    "*.config.ts"
  ],
  "exclude": ["node_modules", "build", "dist"],
  "compilerOptions": {
    "types": [
      "node",
      "vite/client",
      "vitest/globals",
      "@testing-library/jest-dom",
      "@playwright/test"
    ]
  }
}
