{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "check": "tsc",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "dev": "cross-env NODE_ENV=development DOTENV_CONFIG_PATH=env/.env-app.local tsx -r dotenv/config server/index.ts",
    "start": "node -r dotenv/config dist/index.js",
    "docker:dev": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:restart": "npm run docker:down && npm run docker:dev",
    "docker:logs": "docker-compose logs -f videovault-dev",
    "docker:shell": "docker exec -it videovault-dev sh",
    "docker:pw:ui": "docker-compose --profile playwright up --build playwright-ui",
    "test": "npm run test:2:unit",
    "test:all": "npm run test:1:types && npm run test:2:unit && npm run test:3:integration && npm run test:4:e2e && npm run test:5:build && npm run test:6:health",
    "test:quick": "npm run test:1:types && npm run test:2:unit",
    "test:pre-deploy": "npm run test:all",
    "test:1:types": "echo '\n▶ Step 1/6: Type Checking...\n' && npm run check",
    "test:2:unit": "echo '\n▶ Step 2/6: Unit Tests (Client + Server)...\n' && npm run test:client && npm run test:server",
    "test:3:integration": "echo '\n▶ Step 3/6: Integration Tests...\n' && npm run test:e2e",
    "test:4:e2e": "echo '\n▶ Step 4/6: E2E Tests (Playwright)...\n' && npm run docker:pw:all",
    "test:5:build": "echo '\n▶ Step 5/6: Production Build...\n' && npm run build",
    "test:6:health": "echo '\n▶ Step 6/6: Health Check...\n' && echo 'All tests passed! ✅'",
    "test:client": "cross-env FAST_TESTS=1 vitest run --bail=1",
    "test:server": "cross-env FAST_TESTS=1 vitest run --bail=1 -c vitest.server.config.ts",
    "test:e2e": "vitest run -c e2e/vitest.config.ts",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:full": "vitest run --coverage --bail=1",
    "test:pw": "playwright test",
    "test:pw:ui": "playwright test --ui",
    "test:pw:report": "playwright show-report",
    "test:pw:install": "playwright install chromium",
    "docker:pw:all": "docker-compose --profile playwright up --build --exit-code-from playwright playwright",
    "db:push": "drizzle-kit push",
    "pretest": "tsc -p tsconfig.test.json --noEmit",
    "predocker:pw:all": "node scripts/ensure-playwright-match.mjs",
    "prepare": "if [ -d .git ]; then husky; fi || true"
  },
