{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "dev": "cross-env NODE_ENV=development DOTENV_CONFIG_PATH=env/.env-app.local tsx -r dotenv/config server/index.ts",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "cross-env NODE_ENV=production DOTENV_CONFIG_PATH=env/.env-app.local node -r dotenv/config dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "dev:seed": "cross-env DOTENV_CONFIG_PATH=env/.env-app.local tsx scripts/seed-db.ts",
    "test": "cross-env FAST_TESTS=1 vitest run --bail=1",
    "pretest": "tsc -p tsconfig.test.json --noEmit",
    "test:e2e": "vitest run -c e2e/vitest.config.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit:coverage": "npm run test:coverage",
    "test:all": "npm run check && npm run test:coverage && npm run docker:pw:all",
    "docker:dev": "docker-compose up --build",
    "docker:dev:detached": "docker-compose up --build -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f videovault-dev",
    "docker:shell": "docker-compose exec videovault-dev sh",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "predocker:pw:up": "node scripts/ensure-playwright-match.mjs",
    "docker:pw:up": "docker-compose up -d --build postgres videovault-dev",
    "predocker:pw:run": "node scripts/ensure-playwright-match.mjs",
    "docker:pw:run": "docker-compose --profile playwright run --rm playwright",
    "predocker:pw:all": "node scripts/ensure-playwright-match.mjs",
    "docker:pw:all": "docker-compose --profile playwright up --build --exit-code-from playwright playwright",
    "docker:pw:ui": "docker-compose --profile playwright up --build playwright-ui",
    "docker:pw:ui:detached": "docker-compose --profile playwright up -d --build playwright-ui",
    "verify": "npm run check && npm test && npm run test:e2e && npm run build",
    "test:pw:install": "playwright install chromium",
    "pretest:pw": "node scripts/ensure-playwright-match.mjs && node scripts/check-playwright-host.mjs",
    "test:pw": "cross-env PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS=1 playwright test",
    "test:pw:ui": "cross-env PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS=1 playwright test --ui",
    "test:pw:report": "playwright show-report test-results/playwright-report",
    "clean:reports": "chmod -R u+w playwright-report test-results || true && rm -rf playwright-report test-results || true",
    "docs:build": "node scripts/combine-docs.mjs",
    "thumbs": "node scripts/generate-thumbnails.mjs",
    "process-inbox": "cross-env OLLAMA_URL=http://localhost:11435 node scripts/process_inbox.mjs",
    "smb:mount:unix": "bash scripts/mount-smb.sh",
    "smb:umount:unix": "bash scripts/umount-smb.sh",
    "smb:link:win": "powershell -ExecutionPolicy Bypass -File scripts/mount-smb.ps1",
    "smb:unlink:win": "powershell -ExecutionPolicy Bypass -File scripts/unlink-smb.ps1"
  },
