{
  "name": "vllm-mcp-server",
  "version": "2.0.0",
  "description": "MCP server for vLLM interaction",
  "main": "build/src/index.js",
  "type": "module",
  "bin": {
    "vllm-mcp-server": "./build/src/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && chmod +x build/src/index.js",
    "dev": "tsc --watch",
    "dev:server": "node --watch build/src/index.js",
    "dev:watch": "tsx watch src/index.ts",
    "prepare": "npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "@octokit/rest": "^20.0.0",
    "axios": "^1.13.2",
    "glob": "^10.0.0",
    "pg": "^8.16.3",
    "simple-git": "^3.22.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.16.0",
    "jest": "^29.7.0",
    "jest-util": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.1",
    "typescript": "^5.3.3"
  },
  "files": [
    "build"
  ]
}
